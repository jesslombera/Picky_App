<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Search</title>

	<link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
	<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

<link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>

	<div class="container">
        <div class="row">
            <div class="col-xs-6 col-xs-offset-3">
                <form class="myForm" method="GET" action="/search">
                    <input type="text" name="food" placeholder="dish: tacos">
                    <input type="text" name="city" placeholder="city: San Francisco">

                    <button>Search</button>
                </form>

				

            </div>
        </div>

<% if(food) { %>

	<h2> <%= food  %></h2>
	<h1>List of Restaurants </h1>

<% } %>

	<% results.forEach(function(result) { %>
			
			<div> <%= result.name %> </div>
			<div> <%= result.location.address  %></div>
			<div><p>Rating <%= result.rating  %></p></div>
			<div><%= result.rating_img_url  %></div>
			<div> <%=  result.food %> </div>
			

		  <form method="POST" action="/favorites">
		  		<input type="text" style="display: none;"
		  			value="<%= result.name %>"  name="restaurant">

		  		<input type="text" style="display: none;"
		  		   value="<%= food %>" name="dish">
		  		 
				
		  		   <button>Add to Favorites</button>
		  	</form>	   

			
			  
	<%	})  %>

</body>
</html>